<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manop.mashop.Shop.Shop"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/shoptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Shop Name"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/shopdesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shopdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="16dp"
        android:text="Shop description"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoptitle" />

    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="46dp"
        android:src="@drawable/ic_round_home_24px"
        app:layout_constraintBottom_toTopOf="@+id/add_prod_btn"
        app:layout_constraintStart_toStartOf="@+id/shopdesc"
        app:layout_constraintTop_toBottomOf="@+id/shopdesc" />

    <Button
        android:id="@+id/add_prod_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="16dp"
        android:text="Add new product"
        app:layout_constraintBottom_toTopOf="@+id/del_shop_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopImage" />

    <Button
        android:id="@+id/del_shop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="163dp"
        android:layout_marginStart="16dp"
        android:text="Delete Shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_prod_btn" />

    <Button
        android:id="@+id/btn_my_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="14dp"
        android:text="My Products"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_prod_btn" />

    <Button
        android:id="@+id/view_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/button_bg"
        android:text="View Shop Statistics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/del_shop_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>

