<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    android:theme="@style/AppTheme.PrimaryColorStatusBar"
    tools:context="com.example.manop.mashop.Startup.LoginActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signInLinear1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_round_close_24px" />

    <LinearLayout
        android:id="@+id/signInLinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_above="@id/signInLinear2"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/loginEmailField"
            android:drawableStart="@drawable/ic_email_white_24dp"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_margin="10dp"
            android:ems="10"
            android:hint="@string/e_mail_id"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/loginPasswordField"
            android:drawableStart="@drawable/ic_security_green_24dp"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/black" />
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/email_login_button_bg"
            android:text="@string/login_btn"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@android:color/white" />
        <Button
        android:id="@+id/forgetPassBtn"
        android:layout_gravity="end"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
        android:text="@string/forget_pass"
        android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signInLinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">



